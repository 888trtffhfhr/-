<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout 
	    android:gravity="center_vertical"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@color/header"
	    android:orientation="horizontal"
	    >
	    <TextView 
	       	android:text="食为天"
	       	android:layout_width="40dp"
	       	android:layout_height="40dp"
	       	android:textSize="25sp"
	       	android:gravity="center|left"
	       	android:layout_marginLeft="10dp"
	       	android:textColor="#ffffff"
	       	android:layout_weight="5"
	        />
	    <Button 
	        android:id="@+id/add"
	        android:layout_width="30dp"
	       	android:layout_height="30dp"
	       	android:background="@drawable/ico_feed_add"
	        />
	    <Button 
	        android:id="@+id/notify"
	        android:layout_marginLeft="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:background="@drawable/btn_invite_normal"
	        />
	    <Button 
	        android:id="@+id/setting"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:background="@drawable/ico_arrow_up"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/toast"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal"
	    android:background="@color/navigate"
	    >
	    <TextView
	        android:clickable="true" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="首页"
	        android:id="@+id/mainpage"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:textColor="@color/mainColor"
	        />
	    <TextView 
	        android:id="@+id/attention"
	        android:clickable="true" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="发现"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:textColor="@color/mainColor"
	        />
	    <TextView 
	        android:id="@+id/findout"
	        android:clickable="true" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="关注"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:textColor="@color/mainColor"
	        />
	    <TextView 
	        android:id="@+id/user"
	        android:clickable="true" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="我的"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:textColor="@color/mainColor"
	        />
	    
	</LinearLayout>
	<ImageView 
	    android:id="@+id/line"
	    android:layout_width="match_parent"
	    android:layout_height="8dp"
	    android:background="@drawable/btn_red_normal"
	    />
	
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
    	android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f8ff"
       />
	    <ImageView
	         android:focusable="true"
	        android:id="@+id/background"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#ffffff"
	        android:visibility="gone"
	     />
	    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
	       
        android:id="@+id/google_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        gpb:type="folding_circles" ></com.jpardogo.android.googleprogressbar.library.GoogleProgressBar>
	</FrameLayout>
</LinearLayout>
	<Button 
	    android:id="@+id/photo"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="10dp"
		android:background="@drawable/btn_post"	   
	    />
</RelativeLayout>
