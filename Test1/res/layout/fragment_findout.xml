<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   	android:scrollbars="none"
   	android:background="@color/divider"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_margin="10dp"
    >
    <RelativeLayout 
        android:id="@+id/loadingLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_marginLeft="10dp" 
            android:id="@+id/smallImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_watermark_shop"
            />
        <TextView
            
            android:id="@+id/showText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
           	android:layout_toRightOf="@id/smallImageView" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片上传中"
            android:alpha="0.6"
            android:textSize="16sp"
            />
	        <com.daimajia.numberprogressbar.NumberProgressBar
	        android:layout_below="@id/showText"
	        android:id="@+id/numberbar1"
	        android:layout_alignLeft="@id/showText"
	        android:layout_width="200dp"
	        custom:progress="0"
	        style="@style/NumberProgressBar_Default"
	        android:layout_height="wrap_content"
	        android:visibility="visible"
        	/>
	        <ImageView 
	            android:id="@+id/cancle"
	            android:visibility="gone"
	            android:layout_alignParentRight="true"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:src="@drawable/post_btn_ok"
	            />
    </RelativeLayout>
    		<View 
    	    android:layout_width="match_parent"
    	    android:layout_height="3dp"
    	    android:background="@drawable/abc_ab_bottom_transparent_light_holo"
    	    />
	
    	<LinearLayout 
    	    android:id="@+id/shareView"
    	    android:layout_width="match_parent"
        	android:layout_height="80dp"
    	    android:background="#ffffff"
    	    android:gravity="center_horizontal"
    	    android:orientation="vertical"
    	    >
    	    <LinearLayout 
    	    android:layout_marginTop="10dp"
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
    	    >
    	        <ImageView
    	            android:gravity="center"
    	            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="40dp"
		            android:src="@drawable/ic_share_pengyouquan" />
		        	<ImageView
		            android:gravity="center"
		            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="40dp"
		            android:src="@drawable/ic_share_weixin" />
			    	 <ImageView
			    	    android:gravity="center"
			    	    android:layout_weight="1"
			            android:layout_width="0dp"
			            android:layout_height="40dp"
			            android:src="@drawable/ic_share_weibo"/>
			        <ImageView
			            android:gravity="center"
			            android:layout_weight="1"
			            android:layout_width="0dp"
			            android:layout_height="40dp"
			            android:src="@drawable/ic_share_qq" />       
	    	    </LinearLayout>
	    	    <LinearLayout 
	    	    android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	    	    >
		        	<TextView
		        	android:layout_weight="1"
		            android:gravity="center"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="朋友圈" />
		        	<TextView
		        	android:layout_weight="1"
		            android:gravity="center"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="微信好友" />
		        	<TextView
		        	android:layout_weight="1"
		            android:gravity="center"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="新浪微博" />
		        	<TextView
		            android:layout_weight="1"
		            android:gravity="center"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="QQ" />
			</LinearLayout>  
    	</LinearLayout>	
    <ListView
        android:stackFromBottom="true"
        android:id="@+id/stateList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
</ListView>
</LinearLayout>
</ScrollView>